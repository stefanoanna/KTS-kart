                    //}).start();
                }
                else if (line.trim().equals("Target_reached")) {
                    targetReached = true; // <-- S√§tt flagga!
                    gui.appendStatus("‚úÖ AGV har n√•tt m√•let!\n");
                } else if (line.trim().equalsIgnoreCase("klar")) {
